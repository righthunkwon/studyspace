<body>
	<h2>GET Form</h2>
	<!-- action: 요청을 보내는 경로 -->
	<!-- method: 요청을 보내는 방식 -->
	<form action="" method="GET">
		<!-- name 속성필요. -->
		<input type="text" name="id">
		<input type="submit">
	</form>
	<h2>POST Form</h2>
	<form action="" method="POST">
		<!-- name 속성필요. -->
		<input type="text" name="id"> 
		<input type="submit">
	</form>
	<!-- 차이를 느껴라! -->
	<h2>Action1</h2>
	<form action="/gogo" method="GET">
		<!-- name 속성필요. -->
		<input type="text" name="id">
		<input type="password" name="pw">
		<input type="submit">
	</form>
	<h2>Action2</h2>
	<form action="gogo" method="GET">
		<!-- name 속성필요. -->
		<input type="text" name="id">
		<input type="password" name="pw">
		<input type="submit">
	</form>
