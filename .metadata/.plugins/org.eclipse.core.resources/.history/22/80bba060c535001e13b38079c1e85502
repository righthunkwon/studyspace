package array02;

import java.util.Scanner;

public class P_1208 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		// test case
		for (int t = 1; t <= 10; t++) {
			int dump = sc.nextInt();
			int[] arr = new int[100];
			for (int i = 0; i < 100; i++) {
				arr[i] = sc.nextInt();
			}
			int max = 0, maxIdx = 0, min = 0, minIdx = 0;
			for (int i = 0; i < dump; i++) {
				for (int j = 0; j < 100; j++) {
					if (max < arr[j]) {
						max = arr[j];
						maxIdx = j;
					}
					if (min > arr[j]) {
						min = arr[j];
						minIdx = j;
					}
				}
				if (max - min <= 1) {
					break;
				}
				arr[maxIdx]--;
				arr[minIdx]++;
				max = 0;
				min = 101;
			}

			for (int i = 0; i < 100; i++) {
				if (max < arr[i]) {
					max = arr[i];
				}

				if (min > arr[i]) {
					min = arr[i];
				}

			}

			System.out.printf("#%d", t, max - min);
		}
	}
}
