package array03;

public class Array03_03_2차원배열 {
	public static void main(String[] args) {
		int[][] arr = { { 1, 2, 3 }, { 4, 5, 6 }, { 7, 8, 9 } };
		int n = arr.length;
		int m = arr[0].length;

		// 1. 행우선순회(정방향)
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < m; j++) {
				System.out.printf("%3d", arr[i][j]);
			}
		}
		System.out.println();
		
		// 2. 행우선순회(역방향)
	}
}
