<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.UserDao">

	<!-- 해당 방식으로는 DTO에 정의된 변수명(curriculumCode)과 -->
	<!-- DB에 정의된 컬럼명(curriculum_code)이 일치하지 않아 유저 정보를 가져올 수 없다. -->
	<!-- 
	<select id="selectAll" resultType="User"> 
		SELECT * 
		FROM users 
	</select> 
	-->

	<!-- 해당 방식으로는 커리큘럼 이름이 아니라 코드가 보이므로 불편하다. -->
	<!-- 
	<select id="selectAll" resultType="User"> 
		SELECT id, password, name, 
			   curriculum_code as curriculumCode 
		FROM users 
	</select> 
	-->

	<!-- 쿼리문은 MySQL에서 직접 돌려보고 잘 돌아가는지 먼저 판단하자. -->
	<select id="selectAll" resultType="User">
		SELECT  u.id, u.password, u.name as name,
				u.curriculum_code as curriculumCode,
				c.name as curriculumName
		FROM users u, curriculum c
		WHERE u.curriculum_code = c.code
	</select>

	<select id="selectOne" parameterType="String" resultType="User">
		SELECT id, password, name
		FROM users
		WHERE id = #{id}
	</select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO users
		VALUES (#{id}, #{password}, #{name}, #{curriculumCode})
	</insert>
	

</mapper>