<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper.xml은 Dao의 구현제(implement)이므로 -->
<!-- mapper의 namespace에는 반드시 dao의 경로를 명시해야 한다. -->
<mapper namespace="com.ssafit.board.model.dao.ReviewDao">

	<select id="selectAll" resultType="Review">
		SELECT  * FROM review		
	</select>

	<insert id="insert" parameterType="Review">
		INSERT INTO review
		VALUES (#{reviewId}, #{userId}, #{videoId}, #{title}, #{content}, #{viewcnt}, #{regdate})
	</insert>
	
	<delete id="delete" parameterType="int">
		Delete FROM review
		WHERE review_id = ${reviewId}
	</delete>
	
	<update id="update" parameterType="map">
		Update review set content = ${content}
		WHERE review_id = ${reviewId}
	</update>
	
	<update id="updateViewCnt" parameterType="int">
		Update review set viewcnt = viewcnt+1
		WHERE review_id = ${reviewId}
	</update>
	
	<select id="selectOne" parameterType="int" resultType="Review">
		SELECT * FROM review WHERE review_id = #{reviewId}
	</select>
	
	
	
	
</mapper>